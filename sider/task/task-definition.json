{
    "family": "rosalind",
    "taskRoleArn": "rosalind-ecs-fullAccess",
    "executionRoleArn": "ecsTaskExecutionRole",
    "networkMode": "bridge",
    "containerDefinitions": [
        {
            "name": "ponga",
            "image": "thiagomiller/rosalind",
            "memoryReservation": 8000,
            "command": [
                "task_run.sh"
            ],
            "environment": [
                {
                    "name": "BATCH_FILE_TYPE",
                    "value": "script"
                },
                {
                    "name": "BATCH_FILE_S3_URL",
                    "value": "s3://rosalind-task/task_run.sh"
                },
                {
                    "name": "SSMTP_CONFIG_S3_URL",
                    "value": "s3://rosalind-shadow/ssmtp.conf"
                }
            ],
            "linuxParameters": {
                "capabilities": {
                    "add": [
                        "SYS_ADMIN"
                    ]
                },
                "devices": [
                    {
                        "hostPath": "/dev/fuse",
                        "containerPath": "/dev/fuse",
                        "permissions": [
                            "mknod"
                        ]
                    }
                ]
            },
            "hostname": "rosalind.aws.com",
            "privileged": true,
            "dockerSecurityOptions": [
                "apparmor:unconfined"
            ]
        }
    ],
    "requiresCompatibilities": [
        "EC2"
    ]
}
